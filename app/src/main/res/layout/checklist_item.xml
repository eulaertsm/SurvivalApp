    android:layout_height="wrap_content"
    android:paddingTop="4dp"
    android:paddingBottom="6dp"
    android:orientation="horizontal">

    <TextView
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:id="@+id/item"/>

    <TextView
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:id="@+id/amount"/>

</LinearLayout>